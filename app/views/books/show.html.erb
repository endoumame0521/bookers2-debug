<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: Book.new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
					<%= link_to (@book.user) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @book.user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				<td>
					<% if @book.favorited_by?(current_user) %>
						<%= link_to book_favorites_path(@book), method: :delete do %>
							<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						<% end %>
						×<%= @book.favorites.count %>
					<% else %>
						<%= link_to book_favorites_path(@book), method: :post do %>
							<i class="fa fa-heart-o" aria-hidden="true"></i>
						<% end %>
						×<%= @book.favorites.count %>
					<% end %>
				</td>
				<td><i class="fa fa-comment"></i>x<%= @book.book_comments.count %></td>
				<% if @book.user_id == current_user.id %>
					<td>
						<%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
					</td>
					<td>
						<%= link_to "Destroy", @book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
					</td>
				<% end %>
			</tr>
		</table>

		<%= render 'book_comments/book_comments_table', model: @book %>

		<%= render 'layouts/error_message', model: @book_comment %>

		<h4>New comment</h4>
          <%= form_for [@book, @book_comment] do |f| %>
              <div class="row">
                  <div class="col-sm-12">
                      <%= f.text_area :comment, rows:'5', class: "form-control", placeholder: "Input a comment..." %>
                  </div>
              </div>
              <%= f.submit "submit", class: "btn btn-primary pull-right" %>
          <% end %>

	</div>
</div>

