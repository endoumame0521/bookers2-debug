<h4><%= book.book_comments.count %> Comments</h4>

<table class="table">
	<tbody>
		<% book.book_comments.each do |book_comment| %>
		<tr>
			<td>
				<%= attachment_image_tag book_comment.user, :profile_image, :fill, 20, 20,　format: 'jpeg', fallback: "no_image.jpg", size: 20 %><br>
				<%= book_comment.user.name %>
			</td>
			<td><%= book_comment.comment %></td>
			<td><%= book_comment.created_at.strftime("%Y/%m/%d") %></td>
			<% if book_comment.user_id == current_user.id %>
				<td>
					<%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment), method: :delete, remote: true, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{book_comment.id}" %>
				</td>
			<% else %>
				<td></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>